<button type="button" class="btn btn-outline-info btn-lg" data-toggle="modal" data-target="#plEditModal"> E </button>

<div class="modal fade" id= "plEditModal" tabindex="-1">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"> <%= t('plEditModalTitle', pl: playlist.name) %> </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="container">
          <div class="row justify-content-center">
            <div class="col-10">
              <%= render 'shared/errors', obj: playlist %>
              <%= form_with(model: playlist, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
                <div class="form-group row">
                  <%= f.label t('name'), class: "col-2 col-form-label text-light" %>
                  <div class="col-10">
                    <%= f.text_field :name, class: "form-control shadow rounded", placeholder: t('name Pl') %>
                  </div>
                </div>

                <div class="form-group row justify-content-center">
                  <%= f.submit t('update'),class: "btn btn-outline-light btn-lg" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>